<div class="container">

<div class="row mb-5">
    <div class="col-1"></div>
    <h4 class="d-inline" style="background-color: #dcdcdc">　ジャンル一覧・追加　</h4>
  </div>

<div class="row mb-5">
<%= form_with model: @genre, local:true do |f| %>
  <span class="mr-5"><strong>ジャンル名</strong></span>
  <span class="mr-5"><%= f.text_field :name %></span>
  <%= f.submit '新規登録', class: 'btn btn-success' %>
<% end %>
</div>

<div class="row">
<table class="table col-4">
    <thead class="thead-light">
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td class="align-middle"><%= genre.name %></td>
        <td width="150px"><%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>

  </div>