<h1>注文履歴一覧</h1>

<table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% @customers = Customer.all %>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
        <td><%= customer.email %></td>
        <td><% if customer.is_deleted == true then %>
              <%= "有効" %>
            <% else %>
              <%= "退会" %>
            <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>