<h1>注文履歴一覧</h1>

<table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% @orders = Order.all %>
      <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at, admin_order_path(order) %></td>
        <td><%= order.name %></td>
        <td><%= "個数" %></td>
        <td><%= order.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>