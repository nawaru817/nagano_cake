<div class="container">
  <div class="row mb-3">
    <div class="col-1"></div>
    <div class="col-10"><h4 class="d-inline" style="background-color: #dcdcdc">　注文履歴一覧　</h4></div>
  </div>

<table class="table">
    <thead class="thead-light">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <% sum = 0 %>
      <tr>
        <td><%= link_to (order.created_at).strftime("%Y/%m/%d　%H:%M:%S"), admin_order_path(order) %></td>
        <td><%= order.name %></td>
        <td>
          <% @order_details.each do |order_detail| %>
            <% if order_detail.order_id == order.id then %>
              <% sum += order_detail.amount %>
            <% end %>
          <% end %>
          <%= sum %>
        </td>
        <td><%= order.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="col-5"></div>
  <div><%= paginate @orders %></div>
  </div>
  </div>

