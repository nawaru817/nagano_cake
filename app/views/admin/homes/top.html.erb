<h1>注文履歴一覧</h1>

<table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <% sum = 0 %>
      <tr>
        <td><%= link_to order.created_at, admin_order_path(order) %></td>
        <td><%= order.name %></td>
        <td>
          <% @order_details.each do |order_detail| %>
            <% if order_detail.order_id == order.id then %>
              <% sum += order_detail.amount %>
            <% end %>
          <% end %>
          <%= sum %>
        </td>
        <td><%= order.status %></td>
      </tr>
      <% end %>
      <%= paginate @orders %>
    </tbody>
  </table>