<div class="container">
  <div class="row mb-3">
    <h4 class="d-inline" style="background-color: #dcdcdc">　<%= @customer.last_name + @customer.first_name %>さんの会員詳細　</h4>
  </div>
<div class="row">
<table class="table table-bordered col-8">
  <tbody class="thead-light">
    <tr>
      <th width="200" scope="row">会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th scope="row">氏名</th>
      <td><%= @customer.last_name + "　" + @customer.first_name %></td>
    </tr>
    <tr>
      <th scope="row">フリガナ</th>
      <td><%= @customer.last_name_kana + "　" + @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th scope="row">郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th scope="row">住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th scope="row">電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th scope="row">メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
        <% if @customer.is_deleted == true then %>
          <div class="text-success"><strong>有効</strong></div>
        <% else %>
            <div class="text-secondary"><strong>退会</strong></div>
        <% end %>
      </td>
    </tr>
    <tr>
      <th></th>
      <td>
        <span class="mr-5"><%= link_to "編集する", edit_admin_customer_path(params[:id]), class: 'btn btn-success' %></span>
        <span class="ml-4"><%= link_to "注文履歴一覧を見る", admin_root_path(order_sort: params[:id]), class: 'btn btn-primary' %></span>
      </td>
    </tr>
  </tbody>
</table>

  </div>

</div>