<h1>会員一覧</h1>

<table>
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% @customers = Customer.all %>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.last_name %><%= customer.first_name %></td>
        <td><%= customer.email %></td>
        <td><% if item.is_deleted == true then %>
              <%= "有効" %>
            <% else %>
              <%= "退会" %>
            <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>