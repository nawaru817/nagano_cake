<h1>注文履歴詳細</h1>

<table>
    <thead>
      <tr><th>購入者</th><td><%= @order.name %></td></tr>
      <tr><th>注文日</th><td><%= @order.created_at %></td></tr>
      <tr><th>配送先</th><td><%= "〒" + (@order.postal_code).to_s.insert(3, "-") + " " + @order.address %><br><%= @order.name %></td></tr>
      <tr><th>支払方法</th><td><%=  @order.payment_method %></td></tr>
      <%= form_with model: [:admin,@order], local:true do |f| %>
      <tr><th>注文ステータス</th><td><%= select :order, :status, Order.statuses.keys.to_a %><%= f.submit '更新' %></td></tr>
      <% end %>
      </tr>
      <th colspan="2"></th>
    </thead>
</table>
<br>
<table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
        <th colspan="5"></th>
      </tr>
    </thead>
    <tbody>
      <% @order_details.each do |order_detail| %>
        <% if order_detail.order_id == @order.id %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= ((order_detail.price * 1.1).floor).to_s(:delimited) %></td>
        <td><%= order_detail.amount %></td>
        <td><%= (((order_detail.price * 1.1).floor) * order_detail.amount).to_s(:delimited) %></td>
        <td><%= select :order_detail, :making_status, OrderDetail.making_statuses.keys.to_a %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>

