<div class="container">
  <div class="row mb-3">
    <div class="col-1"></div>
    <h4 class="d-inline" style="background-color: #dcdcdc">　会員情報編集　</h4>
  </div>

<%= form_with model: @customer, local:true do |f| %>

<table class="table table-borderless col-10">
  <tbody>
    <tr>
      <th width="200" scope="row"><%= f.label "名前" %></th>
      <td><span class="ml-3">（姓）<%= f.text_field :last_name, autofocus: true %></span><span class="ml-3">（名）<%= f.text_field :first_name, autofocus: true %></span></td>
    </tr>
    <tr>
      <th scope="row"><%= f.label "フリガナ" %></th>
      <td>（セイ）<%= f.text_field :last_name_kana, autofocus: true %>（メイ）<%= f.text_field :first_name_kana, autofocus: true %></td>
    </tr>
    <tr>
      <th scope="row"><%= f.label "郵便番号" %></th>
      <td>　　　　<%= f.text_field :postal_code, autofocus: true %></td>
    </tr>
    <tr>
      <th scope="row"><%= f.label "住所" %></th>
      <td>　　　　<%= f.text_field :address, autofocus: true %></td>
    </tr>
    <tr>
      <th scope="row"><%= f.label "電話番号" %></th>
      <td>　　　　<%= f.text_field :telephone_number, autofocus: true %></td>
    </tr>
    <tr>
      <th scope="row"><%= f.label "メールアドレス" %></th>
      <td>　　　　<%= f.text_field :email, autofocus: true %></td>
    </tr>
    <tr>
      <th scope="row"></th>
      <td>　　　　<span class="mr-5"><%= f.submit "編集内容を保存", autofocus: true, class: 'btn btn-success' %></span>　　　　　　　<span class="ml-5"><%= link_to "退会する", customers_unsubscribe_path, class: 'btn btn-danger' %></span></td>
    </tr>
  </tbody>
</table>

<% end %>

</div>