<h1>会員情報編集</h1>

<%= form_with model: @customer, local:true do |f| %>

  <div class="field">
    <%= f.label "名前" %>
    (姓)<%= f.text_field :last_name, autofocus: true %>
    (名)<%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "フリガナ" %>
    (セイ)<%= f.text_field :last_name_kana, autofocus: true %>
    (メイ)<%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "電話番号" %>
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.text_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存", autofocus: true %>
  </div>
<% end %>

<%= link_to "退会する", customers_unsubscribe_path %>