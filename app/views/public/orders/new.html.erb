<div class="container">

<div class="row ml-5 mb-3">
    <div class="col-1"></div>
    <h4 class="d-inline" style="background-color: #dcdcdc">　注文情報入力　</h4>
  </div>

<%= form_with model: @order, url: orders_confirm_path, local:true do |f| %>
  <h5><strong>支払方法</strong></h5>
  <div class="field ml-4">
    <div><%= f.radio_button :payment_method, "クレジットカード" %><%= f.label :payment_method, "クレジットカード" %></div>
    <div><%= f.radio_button :payment_method, "銀行振込" %><%= f.label :payment_method, "銀行振込" %></div>
  </div>

  <h5><strong>お届け先</strong></h5>

  <div class="ml-4">
  <%= f.radio_button(:select_address, '0') %><%= f.label "ご自身の住所" %><br>
  <div class="ml-3">
    <%= "〒" + @customer.postal_code + " " + @customer.address %><br>
    <%= @customer.last_name + @customer.first_name %>
  </div>
  <br>
  <%= f.radio_button(:select_address, '1') %><%= f.label "新しいお届け先" %><br>

  <div class="row ml-3">
  <table class="table table-borderless table-sm col-5">
    <thead>
      <tr><th>郵便番号(ハイフン無し)</th><td><%= f.text_field :postal_code %></td></tr>
      <tr><th>住所</th><td><%= f.text_field :address %></td></tr>
      <tr><th>宛名</th><td><%= f.text_field :name %></td></tr>
    </thead>
</table>
  </div>

  </div>

  <div class="text-center"><%= f.submit '確認画面へ進む', class: 'btn btn-primary' %></div>
<% end %>

</div>