<h1>注文履歴一覧</h1>

<table>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
        <th colspan="6"></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <% if order.customer_id == current_customer.id then %>
          <tr>
            <td><%= order.created_at %></td>
            <td>
              <%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td>
              <% @order_details.each do |order_detail| %>
                <% if order_detail.order.customer_id == current_customer.id then %>
                  <%= order_detail.item.name %><br>
                <% end %>
              <% end %>
            </td>
            <td><%= (order.total_payment).to_s(:delimited) %></td>
            <td><%= order.payment_method %></td>
            <td><%= link_to "表示する", order_path(order) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>