<div class="container">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-1"></div>
      <div><h4 class="d-inline" style="background-color: #dcdcdc">　ログイン　</h4></div>
    </div>
    <br>
    <div class="row">
      <div class="col-1"></div>
      <span>　　</span><p class="d-inline" style="background-color: #dcdcdc">　会員の方はこちらからログイン　</p>
    </div>

    <div class="row mb-5">
      <div class="col-2"></div>
      <table class="table table-borderless col-10">
        <thead>
          <tr><th></th><td></td></tr>
          <tr><th style="width: 200px"><%= f.label "メールアドレス" %></th><td><%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "40" %></td></tr>
          <tr><th><%= f.label "パスワード" %></th><td><%= f.password_field :password, autocomplete: "current-password", :size => "40" %></td></tr>
          <tr><th></th><td><button class="btn btn-success btn-block col-3" type="submit">ログイン</button></td></tr>
        </thead>
      </table>
    </div>
  <% end %>

  <div class="row">
    <div class="col-1"></div>
    <div><h4 class="d-inline" style="background-color: #dcdcdc">　会員登録がお済みでない方　</h4></div>
  </div>
  <br>
  <div class="row">
    <div class="col-1"></div>
  <span>　　</span><%= link_to "こちら", new_customer_registration_path %> から新規登録を行ってください
  </div>
</div>
